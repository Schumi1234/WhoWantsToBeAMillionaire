@model WebMain.Models.Game.GameRoundViewModel
@{
    ViewData["Title"] = "Frage ";
}

@using (Html.BeginForm("GameRound", "Game", FormMethod.Get, new { @class = "form-horizontal", role = "form", gameRoundViewModel = Model }))
{
    @Model.QuestionForTheRound.Question
    <br />
    foreach (var answer in Model.QuestionForTheRound.Answers)
    {
        <input type="submit" class="btn btn-primary" value=@answer.Answer />
        <br />
    }

}
<!--Save values in models, otherwise data will be lost-->
@for (var i = 0; i < Model.QuestionsToPlay.Count; i++)
{
    for (var x = 0; x < Model.QuestionsToPlay[i].Answers.Count(); i++)
    {
        @Html.HiddenFor(m => m.QuestionsToPlay[i].Answers.ToList()[x])
    }
}

